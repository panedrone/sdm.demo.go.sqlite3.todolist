<?xml version="1.0" encoding="UTF-8"?>
<dto-classes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:noNamespaceSchemaLocation="dto.xsd">

    <dto-class name="Group" ref="get_groups.sql">
        <field type='int64 `json:"g_id"`' column="g_id"/>
        <field type='string `json:"g_name"`' column="g_name"/>
        <field type='int64 `json:"tasks_count"`' column="tasks_count"/>
    </dto-class>

    <dto-class name="Task" ref="tasks">
        <field type="* `json:'t_id'`" column="t_id"/>
        <field type="* `json:'g_id'`" column="g_id"/>
        <field type="* `json:'t_priority'`" column="t_priority"/>
        <field type="* `json:'t_date'`" column="t_date"/>
        <field type="* `json:'t_subject'`" column="t_subject"/>
        <field type="* `json:'t_comments'`" column="t_comments"/>
    </dto-class>

</dto-classes>
